import("//build_overrides/common.gni")
 

executable("TXMgr") {
  configs += [ "//build/config:precompiled_headers" ]

  configs -= [ "//build/config/win:console" ]
  configs += [ "//build/config/win:windowed" ] 
  
  sources = [ 
            "GSAnimButton.h",
            "GSSkin.h",
            "GSTabCtrl.h",
            "MainDlg.h",
            "resource.h",
            "SAnimImg.h",
            "res/resource.h",
            "GSAnimButton.cpp",
            "GSSkin.cpp",
            "GSTabCtrl.cpp",
            "MainDlg.cpp",
            "SAnimImg.cpp",
            "TXMgr.cpp",
            "TXMgr.rc",
    
  ]

  include_dirs = [
    ".",
    "../../config",
    "../../soui/include",
    "../../utilities/include",
    "../../components",
  ]

  deps = [ 
    "../../utilities",
    "../../SOUI",
    "../../third-part",
    "../../components",
    "../../soui-sys-resource",
    "../../../:preBuild_TXMgr_resource",
  ]
 

  if (is_win) {
    cflags = [
      #"/W3",  # Warning level 3.
      "/wd4201",
      "/wd4239",
    ]
  }
  
  defines = ["_CRT_SECURE_NO_WARNINGS","_USE_UI_LIBRAY",] 

} 